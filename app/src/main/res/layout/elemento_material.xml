<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="195dp" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/imageView"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="3" android:layout_gravity="center_vertical">
            <TextView
                    android:text="Clave Materia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/etClave" android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <TextView
                    android:text="Nombre Materia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/etNombre" android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>